{
  "name": "blumilksoftware/codestyle",
  "description": "Blumilk codestyle configurator",
  "type": "library",
  "require": {
    "php": "^8.0",
    "symplify/easy-coding-standard": "^9.1"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Krzysztof Rewak",
      "email": "krzysztof.rewak@blumilk.pl"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Blumilk\\Codestyle\\": "src/"
    }
  },
  "scripts": {
    "ecs": "./vendor/bin/ecs check",
    "ecs-fix": "./vendor/bin/ecs check --fix",
    "test": "./vendor/bin/phpunit tests"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
